<div class="form-side">
    <div class="form-side-container">
      <header>
        <div class="cantina-unifasb">
            <h3>Cantina UNIFASB</h3>
            <img src="/images/logo-unifasb.png" alt="Logo UNIFASB" />
          </div>
        <h1>Cadastro de usuários</h1>
        <p>Já tem uma conta? <a href="/login">Entrar</a></p>
      </header>
      <form class="form" id="register" action="/auth/register" method="POST">
        <div class="form-items">
          <div class="form-item">
            <label for="name">Nome</label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              placeholder="Digite seu nome"
              onfocusout="saveValue(this)"
              required
            />
            <i class="icon-error"></i>
            <small></small>
          </div>
          <div class="form-item">
            <label for="lastName">Sobrenome</label>
            <input
              type="text"
              id="lastName"
              name="lastName"
              placeholder="Digite seu sobrenome"
              onfocusout="saveValue(this)"
              required
            />
            <i class="icon-error"></i>
            <small></small>
          </div>
          <div class="form-item">
            <label for="email">Email</label>
            <input
              type="text"
              id="email"
              name="email"
              placeholder="Digite seu email"
              onfocusout="saveValue(this)"
              required
            />
            <i class="icon-error"></i>
            <small></small>
          </div>
          <div class="form-item">
            <label for="celular">Celular</label>
            <input
              type="tel"
              id="celular"
              name="celular"
              oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"
              maxlength="11"
              placeholder="(__) _____-____"
              onfocusout="saveValue(this)"
              required
            />
            <i class="icon-error"></i>
            <small></small>
          </div>
          <div class="form-item">
            <label for="password">Senha</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Digite sua senha"
              required
            />
            <i class="icon-error"></i>
            <small></small>
          </div>
          <div class="form-item">
            <label for="passwordConfirm">Confirme sua senha</label>
            <input
              type="password"
              id="passwordConfirm"
              name="passwordConfirm"
              placeholder="Confirme sua senha"
              required
            />
            <i class="icon-error"></i>
            <small></small>
          </div>
        </div>
        <button type="submit"">Registrar</button>
        <% if(messages.Status) { %>
          <div class="alert">
            <%= messages.Status %>
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
          </div>
        <% } %>
      </form>
    </div>
  </div>